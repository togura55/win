    xmlns:local="using:BtServer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="Pbtn_Start" Content="Button" HorizontalAlignment="Left" Margin="135,146,0,0" VerticalAlignment="Top" Height="47" Width="155" Click="Pbtn_Start_Click"/>
        <ListBox x:Name="ListBox_Messages" HorizontalAlignment="Left" Height="200" Margin="135,300,0,0" VerticalAlignment="Top" Width="480" ScrollViewer.HorizontalScrollBarVisibility="Visible"/>
    </Grid>
</Page>
