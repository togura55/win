<Page
    x:Class="Broker.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Broker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ListBox x:Name="ListBox_Message" HorizontalAlignment="Center" Height="548" Margin="0,330,0,0" VerticalAlignment="Top" Width="1402" />
        <Button x:Name="Pbtn_Start" Content="Button" HorizontalAlignment="Left" Margin="50,201,0,0" VerticalAlignment="Top" Click="Pbtn_Start_Click"/>
        <TextBlock x:Name="TextBlock_HostName" HorizontalAlignment="Left" Margin="50,47,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="TextBlock_PortNumber" HorizontalAlignment="Left" Margin="49,90,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBox_PortNumberValue" HorizontalAlignment="Left" Margin="169,84,0,0" Text="TextBox" VerticalAlignment="Top" Width="118"/>
        <TextBlock x:Name="TextBlock_HostNameValue" HorizontalAlignment="Left" Margin="169,47,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</Page>
